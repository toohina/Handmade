<%-include("partials/header.ejs")%>
    <section class="login">
        <div class="card-div">
            <div class="card mx-auto" style="width:21rem;">
                <div class="card-body">
                    <h1 class="card-title">LOGIN</h1>
                    <form action="/login" method="post" class="py-3">
                        <% if(successfulLogin){ %>
                            <h6>Email: </h6>
                            <input name="username" type="email" class="col-12 my-1 py-1">
                            <h6>Password: </h6>
                            <input name="password" type="password" class="col-12 my-1 py-1">
                            <% }else{ %>
                                <h6>Email: </h6>
                                <input type="email" class="col-12 my-1 py-1 form-control is-invalid">
                                <h6>Password: </h6>
                                <input type="password" class="col-12 my-1 py-1 form-control is-invalid">
                                <div class="invalid-feedback">
                                    Wrong password or email. Please try again.
                                </div>
                                <% } %>
                                    <a href="/register">Not registered? Register now.</a>
                                    <button type="submit" class="btn btn-dark col-12 mt-5">Login</button>
                    </form>
                </div>
            </div>
        </div>

    </section>
    <%-include("partials/footer.ejs")%>