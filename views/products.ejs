<%-include("partials/header.ejs")%>
<section class="products">
    <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-3 gy-5">
     <%products.forEach(function(product){%>
     
      <div class="col">
        <div class="card mx-auto" style="width: 22rem;">
            <img src="<%=product.imgUrl%>" class="card-img-top" alt="..." height="300px" width="300px">
            <div class="card-body">
              <h5 class="card-title"><%=product.name%></h5>
              <h2 class="card-text">Rs <%=product.price%></h2>
              <a href="#"><button class="btn-pink col-12 my-1">Buy now</button></a>
              <form action="/addToCart" method="post">
                <input type="hidden" name="productId" value="<%=product.id%>">
                <button type="submit" class="btn-black col-12 my-1"> <i class="fas fa-shopping-cart"></i> Add to cart</button>
              </form>
              <form action="/addToWishlist" method="post">
                <input type="hidden" name="productId" value="<%=product.id%>">
                <button type="submit" class="btn-black col-12 my-1"><i class="fas fa-heart"></i> Add to wishlist</button> 
              </form>
            </div>
          </div> 
    </div>
    
    <%});%>
    </div>
</section>
<%-include("partials/footer.ejs")%>